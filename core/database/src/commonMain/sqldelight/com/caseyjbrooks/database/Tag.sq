CREATE TABLE tag (
    uuid TEXT NOT NULL PRIMARY KEY,
    text TEXT NOT NULL
);

createTag:
INSERT INTO tag(uuid, text)
VALUES ?;

updateTag:
UPDATE
    tag
SET
    text = :text
WHERE
    uuid = :uuid;

deleteTag:
DELETE FROM
    tag
WHERE
    uuid = :uuid;

getAll:
SELECT
    *
FROM
    tag;

getById:
SELECT
    *
FROM
    tag
WHERE
    uuid = :uuid
LIMIT 1;

getByText:
SELECT
    *
FROM
    tag
WHERE
    text = :text
LIMIT 1;
